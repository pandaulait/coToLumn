  <% if current_user.present?  %>
    <%= form_with model: new_post, url: topic_posts_path(topic) , local:true do |f| %>
      <%= f.label :body , c.number.to_s + 'へ返信'%><br/>
      <%= f.text_area :body %>
      <%= f.hidden_field :topic_id , value: topic.id %>
      <%= f.hidden_field :parent_id , value: c.id %><br/>
      <%= f.submit '投稿' %>
    <% end %>
  <% end %>