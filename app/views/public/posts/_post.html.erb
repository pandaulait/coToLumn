<% posts.each do |c|%>
  <p>
    <% if c.parent_id.present? %>
      <span style ="color: green;">>><%= c.parent.number%></span>
    <% end %>
    <%= c.number %>.<%=c.user.name%>　<br /><%= c.body %> <%= link_to 'リプライ', topic_post_ajax_path(topic,c) ,remote:true%>
  </p>
  <hr class="cp_hr08" />
  <%# if current_user.present?  %>
    <%#= form_with model: new_post, url: topic_posts_path(topic) , local:true do |f| %>
      <%#= f.label :body , c.number.to_s + 'へ返信'%>
      <%#= f.text_field :body %>
      <%#= f.hidden_field :topic_id , value: topic.id %>
      <%#= f.hidden_field :parent_id , value: c.id %>
      <%#= f.submit '投稿' %>
    <%# end %>
  <%# end %>

  <% if c.children.present? %>
    <div class="ml-3"> <%= render 'public/posts/post', {posts: c.children, topic: topic, new_post: new_post} %></div>
  <%end %>
<% end %>