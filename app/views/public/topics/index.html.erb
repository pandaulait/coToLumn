<div class="row">
  <div class="col-lg-2"></div>
  <div class="col-lg-8">
    <% if current_user.present? %>
      <h4 class="pencil">トピック名</h4>
      <%= form_with model: @topic , class: "d-flex", local:true do |f| %>
        <%#= f.label :title ,'トピック名'%><br />
        <%= f.text_field :title , class: "form-control"%>
        <%= f.submit '投稿', class: "tsbtn btn-11 my-0" %>
      <% end %>
    <% end %>

    <% if @topics.present? %>
      <p class="heading01 m-3">トピック一覧</p>
      <% @topics.each do |topic| %>
        <%= link_to  topic_path(topic) do %>
          <p><%= topic.title %><%= topic.user_id%><%= topic.created_at%></p>
        <% end %>
      <% end %>
    <% else %>
      <p class="heading01 mt-3">トピックはありません。</p>
    <% end %>

  </div>
  <div class="col-lg-2"></div>
</div>
