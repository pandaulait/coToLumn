<% if content.bookmarked_by?(current_user) %>
  <span>
    <%= link_to bookmark_path(content.bookmarks.find_by(user_id: current_user.id)), method: :delete , remote:true do %>
      <i class="fas fa-bookmark"></i><%= content.bookmarks.count %>
    <% end %>
  </span>
<% else %>
  <span>
    <%= link_to bookmarks_path(marked_content_id: content.id, marked_content_type: content.class), method: :post , remote:true  do %>
      <i class="fas fa-bookmark"></i><%= content.bookmarks.count %>
    <% end %>
  </span>
<% end %>