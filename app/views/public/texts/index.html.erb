<h1>Public::Texts#index</h1>
<p>Find me in app/views/public/texts/index.html.erb</p>
<script>
  console.log(marked('I am using __markdown__.'));
  document.getElementById('content').innerHTML =
      marked('# Marked in browser\n\nRendered by **marked**.');
</script>
<% @texts.each do |text| %>
<div id="content">
  <%= attachment_image_tag text, :image, :fill, 60, 60 %>
  <p><%if text.image_id == nil%>
        nil
    <%end%></p>
  <p>単元名：<%= text.title %></p>
  本文：<%= markdown(text.body) %>
  <p>ユーザーネーム：<%= text.user.name %></p>
  <%= link_to "詳細", text_path(text) %>
  <% if text.user == current_user %>
    <%= link_to "削除", text_path(text), method: :delete %>
  <% end %>
</div>
<% end %>