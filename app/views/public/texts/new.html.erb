<h1>Public::Texts#new</h1>
<p>Find me in app/views/public/texts/new.html.erb</p>
<% if @text.errors.any? %>
    <div id="error_explanation">
      <ul>
       <% @text.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
      </ul>
    </div>
  <% end %>
<h1>画像投稿フォーム</h1>
<%= form_with model: @text, local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>