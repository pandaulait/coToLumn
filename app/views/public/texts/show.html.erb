<h1>Public::Texts#show</h1>
<p>Find me in app/views/public/texts/show.html.erb</p>
<!--テキストの表示-->
<div class ="box5 my-5">
  <h2 class="main"><%= @text.title %></h2></br>
  <%= attachment_image_tag @text, :image, :fill, 60, 60 %>
  <p>本文：<%= markdown(@text.body) %></p>
  <p>ユーザーネーム：<%= @text.admin.name %></p>
  <% if @text.admin == current_admin %>
    <%= link_to "編集", edit_admin_text_path(@text) %>
    <%= link_to "削除", admin_text_path(@text), method: :delete %>
  <% end %>
  <%= link_to "新規パッチテキストを作成", new_text_patch_path(@text) %>
</div>
<!--テキストにlinkしたコラムの表示-->
<div>
  <% @links.each do |link| %>
    <div class="box4 my-5">
      <h2><span></span><%= link.column.title %></h2>
      <%= attachment_image_tag link.column, :image, :fill, 60, 60 %><%= link.column.id %>
      <p><%if link.column.image_id == nil%>
            nil
        <%end%></p>
      <p>本文：<%= markdown(link.column.body) %></p>
      <p>ユーザーネーム：<%= link.column.user.name %></p>
      <%= link_to "詳細", column_path(link.column) %>
      <% if link.column.user == current_user %>
        <%= link_to "削除", column_path(link.column), method: :delete %>
      <% end %>
    </div>
  <% end %>
</div>

<!--問題一覧-->
<% @problems.each do |problem| %>
<div class="box3 my-5">
  <p>教科：<%= problem.subject_status %></p>
  <p><%= markdown(problem.body) %></p>
  <p><%= markdown(problem.answer) %></p>
  <p><%= markdown(problem.commentary) %></p>
  <p>ユーザーネーム：<%=problem.author.name%></p>
  <%= link_to "編集", edit_problem_path(problem) %></br>
</div>
<% end %>

<!--コメント欄-->
<div class = "comment_area">
  <%= render "public/comments/comment_area" ,{comment: @comment, comments: @comments} %>
</div>

