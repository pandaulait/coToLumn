<h1>Public::Users#show</h1>
<p>Find me in app/views/public/users/show.html.erb</p>
<%=@user.name%>さんのマイページ
<%=@user.is_deleted%>
<div class="row">
    <div class ="col-lg-3">
      <div class="sidebar-user">
        <%= attachment_image_tag @user.profile_image, :image, fallback: "logo2.png", class: "icon-image" %>
      </div>
      <%= link_to "退会", users_confirm_path(current_user) ,class: "btn btn-outline-secondary"%>
      <% unless @user == current_user %>
        <% if current_user.following?(@user) %>
          <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
        <% end %>
      <% end %>
    </div>
    <div class ="col-lg-9">aaa</div>
</div>




<% if @user.followings.present? %>
  フォロー中一覧
  <% @user.followings.each do |user| %>
    <%= user.name %>
  <% end %>
<% end %>
<% if @user.followers.present? %>
  フォロワー一覧
  <% @user.followers.each do |user| %>
    <%= user.name %><br />
  <% end %>
<% end %>